<%= render partial: "layouts/header" %>

<div class="input-group mb-3">
  <%= form_with(url: search_gyms_path, local: true, method: :get, class: "form-control") do |form| %>
    <%= form.text_field :keyword, placeholder: "店舗名・所在地で検索する", class: "form-control" %>
    <%= form.submit "検索", class:"btn btn-outline-secondary" %>
  <% end %>
</div>
<% if @gyms.present? %>
<div class="container">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">店舗名</th>
                        <th scope="col">電話番号</th>
                        <th scope="col">所在地</th>
                        <th scope="col" colspan="2"></th>
                    </tr>
                </thead>
  <% @gyms.each do |gym| %>
    <%= render partial: "gym", locals: { gym: gym } %>
  <% end %>
  <% else %>
    <% end %>
            <br/>